datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}
model User {
  id   Int    @id @default(autoincrement())
  name String
  mail String
  pseudo String
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Expense {
  id   Int    @id @default(autoincrement())
  name String
  amount Float
  type_id Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model ExpenseType {
  id   Int    @id @default(autoincrement())
  name String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
